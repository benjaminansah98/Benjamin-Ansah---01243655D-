# include <iostream>

# include <vector>

# include <algorithm>

double findMedian(std::vector<int> nums) {

    // Sort the vector to easily find the median

    std::sort(nums.begin(), nums.end());

    int n = nums.size();

    // Check if the vector is empty

    if (n == 0) {

        return 0.0; // Or throw an exception, depending on the desired behavior for empty input

    }

    // If the number of elements is even, return the average of the middle two elements

    if (n % 2 == 0) {

        return (double)(nums[n / 2 - 1] + nums[n / 2]) / 2.0;

    } else {

        // If the number of elements is odd, return the middle element

        return (double)nums[n / 2];

    }

}

int main() {

    std::vector<int> nums1 = {1, 2, 3, 4, 5};

    std::cout << "Median of nums1: " << findMedian(nums1) << std::endl;  // Output: 3

    std::vector<int> nums2 = {1, 2, 3, 4};

    std::cout << "Median of nums2: " << findMedian(nums2) << std::endl;  // Output: 2.5

    std::vector<int> nums3 = {5, 1, 3, 2, 4};

    std::cout << "Median of nums3: " << findMedian(nums3) << std::endl;  // Output: 3

    std::vector<int> nums4 = {};

    std::cout << "Median of nums4: " << findMedian(nums4) << std::endl;  // Output: 0

    return 0;

}
